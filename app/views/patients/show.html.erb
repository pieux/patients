<% provide(:title, 'View patient info') %>
<%- model_class = Patient -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div class="well">
  <div><strong><%= model_class.human_attribute_name(:medical_record_number) %>:</strong>
  <span><%= @patient.medical_record_number %></div>
  <div><strong><%= model_class.human_attribute_name(:first_name) %>:</strong>
  <span><%= @patient.first_name %></div>
  <div><strong><%= model_class.human_attribute_name(:middle_name) %>:</strong>
  <span><%= @patient.middle_name %></div>
  <div><strong><%= model_class.human_attribute_name(:last_name) %>:</strong>
  <span><%= @patient.last_name %></div>
  <div><strong><%= model_class.human_attribute_name(:birthdate) %>:</strong>
  <span><%= @patient.birthdate %></div>
  <div><strong><%= model_class.human_attribute_name(:gender) %>:</strong>
  <span><%= @patient.gender %></div>
  <div><strong><%= model_class.human_attribute_name(:status) %>:</strong>
  <span><%= @patient.status %></div>
  <div><strong><%= model_class.human_attribute_name(:view_count) %>:</strong>
  <span><%= @patient.view_count %></div>

  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                patients_path, :class => 'btn'  %>
   <% if current_user.id == @patient.user_id %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_patient_path(@patient), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                patient_path(@patient),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
    <% end %>
  </div>
</div>
