<% provide(:title, 'Create a Plan') %>

<div class="container">
  <div class="row">
    <div class="span6 offset3">
      <form class="well form-inline" id="plan-form">
        <input type="text" id="plan-content" name="content" class="span4" placeholder="today I am going to do...">
        <button type="submit" class="btn pull-right">Plan</button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="span8 offset2">
      <table class="table">
        <thead>
          <tr>
            <th>时间</th>
            <th>内容</th>
          </tr>
        </thead>
        <tbody>
        <tr>
          <td>…</td>
          <td>…</td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
